{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "declaration": true,
        "allowJs": true,
        "declarationMap": true,
        "composite": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "src/**/*.ts",
        "src/**/*.json"
    ],
}